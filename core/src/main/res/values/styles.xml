<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PhoneStoreBase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/background_gray</item>
        <item name="colorPrimaryVariant">@color/background_gray</item>
        <item name="colorOnPrimary">@color/dark_blue</item>
        <item name="colorSecondary">@color/peach_color</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/mark_pro</item>
    </style>

    <style name="HeadlineTextAppearance" parent="">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">?colorSecondaryVariant</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetTextAppearance" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?colorSecondaryVariant</item>
        <item name="fontFamily">@font/mark_pro</item>
    </style>

    <style name="ExtendButtonTextAppearance" parent="">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?colorSecondary</item>
    </style>

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="ButtonUnderlined" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textSize">11sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="PeachButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorSecondary</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="HotSalesTextAppearance" parent="">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>


</resources>